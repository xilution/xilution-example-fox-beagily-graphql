{
    "name": "@xilution/xilution-example-fox-beagily-graphql",
    "version": "1.0.0",
    "description": "An example of how to create a graphql server using Xilution Fox and Beagily",
    "main": "src/index.ts",
    "scripts": {
        "build": "tsc -p tsconfig.json && webpack-cli --mode production --config webpack.config.js",
        "clean": "rm -rf dist",
        "docker:logs": "docker logs -f xilution-example-fox-beagily-graphql",
        "docker:build": "docker build -t xilution-example-fox-beagily-graphql -f docker/Dockerfile .",
        "docker:start": "docker-compose -f ./docker/docker-compose.yaml up -d",
        "docker:restart": "docker-compose -f ./docker/docker-compose.yaml restart",
        "docker:stop": "docker-compose -f ./docker/docker-compose.yaml down",
        "docker:terminal": "docker exec -ti xilution-example-fox-beagily-graphql sh",
        "lint": "tslint 'src/**/*.ts' '__tests__/**/*.ts'",
        "test": "yarn test:unit",
        "test:unit": "jest --testPathPattern ./__tests__/unit/",
        "start": "nodemon --watch src --exec ts-node src/index.ts",
        "debug": "nodemon --watch src --exec ts-node --inspect --debug-brk src/index.ts",
        "verify": "yarn lint && yarn test"
    },
    "repository": {
        "type": "git",
        "url": "https://github.com/xilution/xilution-example-fox-beagily-graphql"
    },
    "bugs": {
        "url": "https://github.com/xilution/xilution-example-fox-beagily-graphql/issues"
    },
    "homepage": "https://github.com/xilution/xilution-example-fox-beagily-graphql",
    "devDependencies": {
        "@commitlint/cli": "^7.5.2",
        "@commitlint/config-conventional": "^7.5.0",
        "@types/jest": "^24.0.11",
        "@types/node": "^11.13.5",
        "husky": "^2.1.0",
        "jest": "^24.7.1",
        "nodemon": "^1.18.11",
        "ts-jest": "^24.0.2",
        "ts-loader": "^6.0.4",
        "ts-node": "^8.1.0",
        "tslint": "^5.16.0",
        "typescript": "^3.4.4",
        "webpack": "^4.30.0",
        "webpack-cli": "^3.3.0"
    },
    "dependencies": {
        "@hapi/boom": "^7.4.2",
        "@hapi/catbox-memory": "^4.1.0",
        "@hapi/hapi": "^18.3.1",
        "@types/graphql": "^14.2.3",
        "@types/hapi__boom": "^7.4.0",
        "@types/hapi__catbox-memory": "^4.1.1",
        "@types/hapi__hapi": "^18.2.5",
        "@types/lodash": "^4.14.134",
        "@types/object-hash": "^1.3.0",
        "apollo-server-hapi": "^2.7.2",
        "aws-sdk": "^2.447.0",
        "axios": "^0.19.0",
        "graphql": "^14.4.2",
        "lodash": "^4.17.11",
        "object-hash": "^1.3.1",
        "query-string": "^6.8.2"
    },
    "engines": {
        "node": ">=8.10.0",
        "yarn": ">=1.3.2",
        "npm": ">=5.6.0"
    },
    "husky": {
        "hooks": {
            "commit-msg": "commitlint -E HUSKY_GIT_PARAMS"
        }
    },
    "author": "Todd Brunia <tbrunia@gmail.com> (http://www.github.com/tbrunia)",
    "license": "MIT"
}
