{
    "compilerOptions": {
        "target": "es2015",
        "module": "commonjs",
        "moduleResolution": "node",
        "strict": true,
        "baseUrl": "./",
        "typeRoots": [
            "node_modules/@types",
            "src/@types"
        ],
        "types": [
            "node",
            "jest",
            "hapi__hapi",
            "lodash"
        ],
        "esModuleInterop": true,
        "inlineSourceMap": true,
        "allowSyntheticDefaultImports": true,
        "experimentalDecorators": true
    },
    "include": [
        "src/**/*"
    ],
    "exclude": [
        "node_modules",
        "**/*.spec.ts"
    ]
}
